<div class="container">
  <h1>Add a restaurant</h1>

  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :category, collection: ['japanese', 'chinese', 'french', 'belgian', 'italian'] %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.button :submit, class:'btn btn-warning' %>
  <% end %>
</div>
