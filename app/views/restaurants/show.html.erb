<div class="container">
  <h1><%= @restaurant.name %></h1>
  <p><em><%= @restaurant.category.capitalize %></em></p>

  <h2>Contact details</h2>
  <p><i class="fas fa-map-marker-alt"></i> <%= @restaurant.address %></p>
  <p><i class="fas fa-phone"></i> <%= @restaurant.phone_number %></p>

  <h2>Reviews</h2>
  <% @restaurant.reviews.each do |r| %>
      <% r.rating.times do %><i class="fas fa-star yellow"></i><% end %><% (5 - r.rating).times do %><i class="fas fa-star grey"></i><% end %>
    <p><%= r.content %> </p>
  <% end %>

  <p><%= link_to 'Add your review', new_restaurant_review_path(@restaurant) %></p>

  <%= link_to "Home", restaurants_path, class:'btn btn-primary' %>
</div>
